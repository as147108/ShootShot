@model ShootShot.Models.tMember

@{ ViewBag.Title = "Signup"; }
<head>
    @*~/Content/css/*@
    <link rel="stylesheet" href="~/Content/css/login.css">
    <link rel="javascript" href="~/Content/js/signup.js">
    <link rel="icon" href="~/Content/img/logo.PNG">

    <script>
        function showPSW() {
            var x = document.getElementById("mypsw");
            if (x.type === "password") {
                x.type = "text";
            } else {
                x.type = "password";
            }
        }
        function check() {
            if (document.getElementById("mypsw").value != document.getElementById("cfm_psw").value) {
                document.getElementById('message').style.color = 'red';
                document.getElementById('message').innerHTML = '密碼不一致'
            } else {
                document.getElementById('message').style.color = 'green';
                document.getElementById('message').innerHTML = '密碼一致'
            }
        }
    </script>
</head>
<section>
    <div class="JnL_container">
        <div class="JnL_leftside">
            <img src="~/Content/img/Lside.png" alt="" />
        </div>
        <div class="JnL_rightside" style="margin-top: 30px;">
            <div style="height:70px"></div>
            <form action="~/LoginAndSignup/Signup" method="post">
                <div class="join_container">
                    <h1>Join ShootShot</h1>
                </div>
                <div>
                    <div class="joinForm">
                        <input class="JnL_Form_style" minlength="2" maxlength="50" id="myname" type="text" name="name" required placeholder="姓名" />
                        <input class="JnL_Form_style" id="email" type="email" name="email" required placeholder="電子郵件" />
                        <span style="color:red" class="msg">@ViewBag.email</span>
                        <div class="joinForm_password_container">
                            <input class="JnL_Form_style" id="mypsw" name="password" type="password" onkeyup="check()" required placeholder="密碼" />
                            <div>
                                <input class="joinForm_password_chkbox" type="checkbox" onclick="showPSW()" /><a class="joinForm_password_show">顯示密碼</a>
                            </div>
                        </div>
                        <input class="JnL_Form_style" id="cfm_psw" name="confirmPassword" type="password" required onkeyup="check()" placeholder="確認密碼" />
                        <span style="color:red" class="msg" id="message">@ViewBag.ConfirmMsg</span>
                        <input class="JnL_Form_style" id="tele" type="text" name="tel" required placeholder="連絡電話" />
                        <select class="JnL_Form_style" name="city" id="arealist" required>
                            <option value="台北">台北</option>
                            <option value="新北">新北</option>
                            <option value="基隆">基隆</option>
                            <option value="桃園">桃園</option>
                            <option value="新竹">新竹</option>
                            <option value="苗栗">苗栗</option>
                            <option value="台中">台中</option>
                            <option value="彰化">彰化</option>
                            <option value="南投">南投</option>
                            <option value="雲林">雲林</option>
                            <option value="嘉義">嘉義</option>
                            <option value="台南">台南</option>
                            <option value="高雄">高雄</option>
                            <option value="屏東">屏東</option>
                            <option value="宜蘭">宜蘭</option>
                            <option value="花蓮">花蓮</option>
                            <option value="台東">台東</option>
                            <option value="澎湖">澎湖</option>
                            <option value="金門">金門</option>
                            <option value="連江">連江</option>
                        </select>
                        <select class="JnL_Form_style" name="selectGender" id="gender" required>
                            <option selected disabled value="" hidden>請選擇性別</option>
                            <option value="0">男</option>
                            <option value="1">女</option>
                        </select>
                        <br />
                        <button class="btn btn-dark JnL_Form_style" type="submit" value="">註冊</button><br />

                        <span class="join_p1">已有帳號?<a class="join_a1" href="~/Views/LoginAndSignup/Login.cshtml"> 登入</a></span><br />

                        <span class="join_p2">
                            點擊「註冊」即表示您同意我們的<a href="#" class="join_a1">《服務條款》</a>、<a href="#" class="join_a1">《資料政策》</a>和<a class="join_a1" href="#">《Cookie 政策》</a>。<br />您可能會收到我們的簡訊通知，而且可以隨時選擇停止接收。
                        </span>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
