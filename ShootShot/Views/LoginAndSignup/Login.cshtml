@model ShootShot.Models.tMember
@{
    ViewBag.Title = "Login";
}

<head>
    <link rel="stylesheet" href="~/Content/css/login.css">
</head>
<body>
    <div class="wrap">
        <div class="left"></div>
        <div class="right">
            <form action="~/LoginAndSignup/Login" method="post">
                <div>
                    <p class="p3">Login</p>
                </div>
                <div class="col">
                    <input class="formstyle" id="email" type="email" name="fEmail" required
                           placeholder="請輸入帳號(電子郵件)" />
                    <input class="formstyle" id="password" name="fPassword" type="password" required placeholder="請輸入密碼" />
                    <input class="formstyle" type="submit" value="登入"></>
                    <div><span style="color:red" class="msg">@ViewBag.LoginMsg</span></div>
                </div>
                <div class="login_detail">
                    <a href="#" class="login_a2">忘記密碼</a>
                    <div class="login_p4">
                        <p>沒有帳號嗎?<a href="./mbrJoin.html"> 加入ShootShot</a></p>
                    </div>
                </div>
                <div class="login_otherway">
                    <box class="login_line"></box>
                    <p class="login_p5">透過下列帳號登入</p>
                    <a href="#"><img class="login_otherway_img" src="./image/svg/google.svg" alt=""></a>
                </div>
            </form>
        </div>
    </div>
</body>

