    <!-- #article 右側欄內容：會員資料更新區塊 -->
    <article class="member_artForform">
        <div class="editmemberform">
            <form action="~/MemberCenter/EditProfile" method="post">
                <!-- 照片區塊 -->
                <div class="photo">
                    <label for="">相片</label>
                    <div class="image">
                        <img class="pic" src="~/Content/img/login_pic.svg" alt="">
                    </div>
                    <a class="image" href="">修改</a>
                </div>
                <!-- 姓名生日 -->
                <div>
                    <div class="namebirth">
                        <label for="">姓名 </label>
                        <input name="name" class="name" type="text" value="@Model.fName" required />
                        <a href="">修改</a>
                    </div>
                    <br>
                    @*<div class="namebirth">
                        <label for="">生日 </label>
