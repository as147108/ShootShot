                </div>
                <br>
                <!-- 電話 -->
                <div class="phone">
                    <label for="">電話 </label>
                    <input type="tel" name="phone" value="@Model.fTel" required />
                    <a href="">修改</a>
                </div>
                <br>
                <!-- 地區 -->
                <div class="region">
                    <label for="">地區 </label>
                    <select class="city" name="city" id="selCity" required>
                        <option selected disabled value="" hidden>@Model.fArea</option>
                        <option value="基隆市">基隆市</option>
