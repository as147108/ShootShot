@model IEnumerable<ShootShot.ViewModels.PhotAlbumViewModel>

@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_LayoutForPhotoPrj.cshtml";
}

<!-- #article 右側欄內容：相簿編輯區塊 -->
<article class="phoAlbum_artForAlbum">

