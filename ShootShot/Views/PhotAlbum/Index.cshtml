							@*@Html.ActionLink("新增相片", "PicAdd", new { id = @item }, new { @class = "btn btn-outline-secondary", style = "margin-left:5px" })*@
							<img src="~Content/img/AnnaShvets/animal/animal1.jpeg" class="card-img-top" alt="...">
							<div class="card-body">
								<p class="card-title">動物</p>
								<p class="card-text">12件作品</p>
							</div>
						</a>		
					</div>
				}
					<!-- #article 右側欄內容：卡片1-2 -->
					<div class="card">
						<a href="">
							<img src="./img/AnnaShvets/flowershop/flowershop1.jpeg" class="card-img-top" alt="...">
							<div class="card-body">
								<p class="card-title">花店</p>
								<p class="card-text">14件作品</p>
							</div>
						</a>
					</div>

					<!-- #article 右側欄內容：卡片1-3 -->
					<div class="card">
						<a href="">
							<img src="./img/AnnaShvets/pizzera/pizzera1.jpeg" class="card-img-top" alt="...">
							<div class="card-body">
								<p class="card-title">pizza</p>
								<p class="card-text">13件作品</p>
							</div>
						</a>
					</div>

				</div>

			<!-- #article 右側欄內容：卡片區塊slide2 -->
			<div class="carousel-item" data-bs-interval="2000">
				<!-- #article 右側欄內容：卡片2-1 -->
				<div class="card">
					<a href="">
						<img src="./img/AnnaShvets/surfing/surfing1.jpeg" class="card-img-top" alt="...">
						<div class="card-body">
							<p class="card-title">衝浪</p>
							<p class="card-text">12件作品</p>
						</div>
					</a>
				</div>

				<!-- #article 右側欄內容：卡片2-2 -->
				<div class="card">
					<a href="">
						<img src="./img/gallery.svg" class="card-img-top noalbum" alt="...">
						<div class="card-body">
							<p class="card-title">女孩</p>
							<p class="card-text">0件作品</p>
						</div>
					</a>
				</div>

				<!-- #article 右側欄內容：卡片2-3 -->
				<div class="card" hidden>
					<a href=""></a>
					<img src="./img/product.jpg" class="card-img-top" alt="...">
					<div class="card-body">
						<p class="card-title">商品形象照</p>
						<p class="card-text">8件作品</p>
					</div>

				</div>
			</div>
		</div>
